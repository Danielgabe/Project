<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relantrian"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textantrian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/noantrian"
            android:textColor="#1E90FF"
            android:textSize="40dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/up_bar"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/frontliner_logo" />

            <Button
                android:id="@+id/buttonLogout1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/home" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/layananboxlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/layanan_umum" />

            <ScrollView
                android:id="@+id/scrollViewLayananTNS"
                android:layout_width="match_parent"
                android:layout_height="0dp" 
                android:layout_weight=".30">

                <LinearLayout
                    android:id="@+id/linearLayoutLayananUmum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

<!--                     <Button -->
<!--                         android:id="@+id/buttonTransferLayananUmum" -->
<!--                         android:layout_width="match_parent" -->
<!--                         android:layout_height="wrap_content" -->
<!--                         android:background="@drawable/row_data1" -->
<!--                         android:text="@string/terimaSPK" -->
<!--                         android:textColor="#2D9DBE" -->
<!--                         android:textSize="20dp" /> -->
                </LinearLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/layananboxlabel1"
                android:layout_width="529dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/inisialidbar" />

            <Spinner
                android:id="@+id/spinnerInisialId"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/combo_box" />

            <Button
                android:id="@+id/buttonRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/refresh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/noantrian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noantrian"
                android:layout_gravity="center_horizontal"
                android:textColor="#1E90FF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nourutTransferNonSVY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:layout_gravity="center_horizontal"
                android:textColor="#FAAF76"
                android:textSize="70dp" />

            <Button
                android:id="@+id/buttonConfirmTransferNonSurveyor"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:background="@drawable/btnok" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>